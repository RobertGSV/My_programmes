#include <stdio.h>

// code to find the highest and lowest values in an array of integers

int numbers[5];

int highest = 0;

int main(void)
{
    printf("Enter 5 integers, pressing enter after each one entered\n");
    
    int i=0;
    for(i=0; i < 5; i++)
    {
    scanf("%d", &numbers[i]);

    // find the highest value first in order to make the lowest section below work

    if (numbers[i] > highest)
    {
          highest = numbers[i];
    }
    }
    printf("The highest number is %d\n\n", highest);
    int lowest = highest;
    int j=0;
    for(j=0; j < 5; j++)
    {
        if (numbers[j] < lowest)
    {
          lowest = numbers[j];
    }
    }
    printf("The lowest number is %d\n\n", lowest);
}
