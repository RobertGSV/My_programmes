#include <stdio.h>

// you always have to have a highest value first and set "lowest = highest" on line 23 to make it work

int numbers[5];

int highest = 0;

int main(void)
{
    printf("Enter 5 integers, pressing enter after each one entered\n");

    int i=0;
    for(i=0; i < 4; i++)
    {
    scanf("%d\n", &numbers[i]);
    if (numbers[i] > highest)
    {
          highest = numbers[i];
    }
    }
    //printf("The highest number is %d\n\n", highest);
    int lowest = highest;
    int j=0;
    for(j=0; j < 4; j++)
    {
        if (numbers[j] < lowest)
    {
          lowest = numbers[j];
    }
    }
    printf("The lowest number is %d\n\n", lowest);
}

