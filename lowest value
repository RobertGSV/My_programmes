#include <stdio.h>
#include <string.h>

// find the lowest value and the highest value in an array
// must find the highest value first to make the lowest code work

int numbers[5];

int highest = 0;

int main(void)
{
    printf("Enter 5 integers, pressing enter after each one entered\n");

    int i=0;
    for(i=0; i < 5; i++)
    {
    scanf("%d", &numbers[i]);

    if (numbers[i] > highest)
    {
          highest = numbers[i];
    }
    }
    printf("The highest number is \t%i\n", highest);
    int lowest = highest;
    int j=0;
    for(j=0; j < 5; j++)
    {
        if (numbers[j] < lowest)
    {
          lowest = numbers[j];
    }
    }
    printf("The lowest number is \t%i\n", lowest);
}
