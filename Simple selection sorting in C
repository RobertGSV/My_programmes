#include <stdio.h>

int main(void)
{
int temp = 0;
int numbers[5];
int get_int;


printf("Enter 5 integers, pressing return after each one entered\n");

    int lowest;

    for(int i=0; i < 5; i++)
    {
    scanf("%d", &numbers[i]);
    }
    printf("You entered: \n");

for (int i=0; i < 5; i++)
{
    printf("%i ,", numbers[i]);
    for(int j = 0; j < 5; j++)
    {
    if (numbers[j] > numbers[j+1])
    {
        temp = numbers[j];
        numbers[j] = numbers[j+1];
        numbers[j+1] = temp;
    }
    }
}
printf("\nSorted in ascending order: ");
for (int i=0; i < 5; i++)
{
printf("%i, ", numbers[i]);

}
printf("\n\n");
// descending order
temp =0;
for (int i=0; i < 4; i++)
{

    for(int j = 0; j < 4; j++)
    {
    if (numbers[j] < numbers[j+1])
    {
        temp = numbers[j];
        numbers[j] = numbers[j+1];
        numbers[j+1] = temp;
    }
    }
}
printf("\nSorted in descending order: ");
for (int i=0; i < 5; i++)
{
printf("%i, ", numbers[i]);

}
printf("\n\n");


}





